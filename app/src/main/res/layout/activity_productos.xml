<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondito"
    tools:context=".Principal_vendedor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="55dp"
            android:focusableInTouchMode="false"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Mis productos"
            android:textAlignment="center"
            android:textColor="#1F329A"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/producto" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Tiendita Don Luchito"
            android:textAlignment="center"
            android:textColor="#040404"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:textAlignment="center"
        android:textColor="#1F329A"
        android:height="5dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/prod" />

        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgFoto"
            android:layout_toRightOf="@+id/imgFoto"
            android:text="Leche Gloria"
            android:textColor="#050505"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblNombre"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/imgFoto"
            android:layout_toRightOf="@+id/imgFoto"
            android:text="S/4.50"
            android:textColor="#3F51B5"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lblDisponible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblNombre"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="6dp"
            android:layout_toEndOf="@+id/imgFoto"
            android:layout_toRightOf="@+id/imgFoto"
            android:text="Disponible"
            android:textColor="#3F51B5"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgFoto2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/galleta" />

        <TextView
            android:id="@+id/lblNombre23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgFoto2"
            android:layout_toRightOf="@+id/imgFoto2"
            android:text="Galleta Picaras"
            android:textColor="#050505"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblPrecio23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblNombre23"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/imgFoto2"
            android:layout_toRightOf="@+id/imgFoto2"
            android:text="S/1.00"
            android:textColor="#3F51B5"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lblDisponible23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblNombre23"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="6dp"
            android:layout_toEndOf="@+id/imgFoto2"
            android:layout_toRightOf="@+id/imgFoto2"
            android:text="Disponible"
            android:textColor="#3F51B5"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgFoto3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/ph" />

        <TextView
            android:id="@+id/lblNombre24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgFoto3"
            android:layout_toRightOf="@+id/imgFoto3"
            android:text="Papel HigiÃ©nico"
            android:textColor="#050505"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblPrecio24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblNombre24"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/imgFoto3"
            android:layout_toRightOf="@+id/imgFoto3"
            android:text="S/1.50"
            android:textColor="#3F51B5"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lblDisponible24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblNombre24"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="6dp"
            android:layout_toEndOf="@+id/imgFoto3"
            android:layout_toRightOf="@+id/imgFoto3"
            android:text="Disponible"
            android:textColor="#3F51B5"
            android:textSize="16sp" />

    </RelativeLayout>





</LinearLayout>